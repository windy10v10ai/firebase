{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "api",
    "runtime": "nodejs22"
  },
  "hosting": [
    {
      "target": "api",
      "public": "public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "regex": "^/api/.*",
          "function": "client",
          "region": "asia-northeast1"
        }
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001,
      "host": "0.0.0.0"
    },
    "hosting": {
      "port": 5000,
      "host": "0.0.0.0"
    },
    "ui": {
      "enabled": true
    },
    "database": {
      "port": 9000
    }
  },
  "database": {
    "rules": "database.rules.json"
  },
  "extensions": {
    "firestore-bigquery-export-players": "firebase/firestore-bigquery-export@0.2.5",
    "firestore-bigquery-export-members": "firebase/firestore-bigquery-export@0.2.5"
  }
}
